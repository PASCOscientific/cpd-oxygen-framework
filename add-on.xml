<?xml version="1.0" encoding="UTF-8"?>

<xt:extensions xmlns:xt="http://www.oxygenxml.com/ns/extension"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.oxygenxml.com/ns/extension http://www.oxygenxml.com/ns/extension/extensions.xsd">
    <xt:extension id="com.pasco.cpd-framework">
        <xt:location href="https://github.com/PASCOscientific/cpd-oxygen-framework/archive/master.zip"/>
        <xt:version>1.1.10</xt:version>
        <xt:oxy_version>23.0+</xt:oxy_version>
        <xt:type>framework</xt:type>
        <xt:author>Jonathan Hanna</xt:author>
        <xt:name>CPD Framework</xt:name>
        <xt:description xmlns="http://www.w3.org/1999/xhtml">
            <html>
                <head>
                    <title>CPD Oxygen Framework</title>
                </head>
                <body>
                    <p>Framework for creating PASCO curriculum documents in Oxygen XML Editor.</p>
                    <h2>What's new in version 1.1.1</h2>
                    <p>Added the following Schematron rules:</p>
                    <ul>
                        <li>MathML blocks must be nested in an equation-block or equation-inline element.</li>
                        <li>Don't nest block elements in paragraph elements.</li>
                    </ul>
                    <h2>What's new in version 1.1.0</h2>
                    <ul>
                        <li>Added styles for engineering activities.</li>
                    </ul>
                </body>
            </html>
        </xt:description>
